<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="powder_toolkit.perspective.PowderToolkit"
            icon="icons/releng_gears.gif"
            id="perspective.PowderToolkit"
            name="Powder Toolkit">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="powder_toolkit.views.Loadview"
            id="powder_toolkit.views.Loadview"
            name="Load">
      </view>
      <view
            class="powder_toolkit.views.Peakview"
            id="powder_toolkit.views.Peakview"
            name="Find Peaks">
      </view>
      <view
            class="powder_toolkit.views.Indexview"
            id="powder_toolkit.views.Indexview"
            name="Index">
      </view>
      <view
            class="powder_toolkit.views.Compareview"
            id="powder_toolkit.views.Compareview"
            name="Compare">
      </view>
      <view
            class="powder_toolkit.views.LoadedDataview"
            id="powder_toolkit.views.LoadedDataview"
            name="Loaded Data">
      </view>
      <view
            class="powder_toolkit.views.Plotview"
            id="powder_toolkit.views.Plotview"
            name="Plot">
      </view>
   </extension>

</plugin>
